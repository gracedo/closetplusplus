<!DOCTYPE html>
<html>
<head>
  <title>Closet++</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => false %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar nav-default navbar-inverse" role="navigation">
    <div class="navbar-inner">
      <ul class="nav nav-pills">
        <li>
          <a href="/#/" class="navbar-brand">Closet++</a>
        </li>
        <li><a href="#/">Link</a></li>
        
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        
        <% if user_signed_in? %>
          <ul class="nav nav-pills navbar-right">
            <li><a href="#">Link</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <center><li role="presentation" class="dropdown-header"><%= current_user.fname %> <%= current_user.lname %></li></center>
                <li class="divider" role="presentation"></li>
                <li><a href="/users/edit">Account Information</a></li>
                <!-- <li><a href="/#/addresses">Shipping Info</a></li> -->
                <li><a href="#">Billing Info</a></li>
                <li><a href="#">Billing History</a></li>
                <li class="divider"></li>
                <li><%= link_to "Log Out", destroy_user_session_url, method: :delete %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="nav nav-pills navbar-right">
            <li><a href="<%= new_user_session_url %>">Log In</a></li>
            <li><a href="<%= new_user_registration_url %>">Sign Up</a></li>
          </ul>
        <% end %>
        
      </ul>
    </div>
  </nav>

    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
      <div class='alert alert-danger'><%= error %></div>
      <% end %>
    <% end %>
    <% if flash[:notice] %>
      <div class='alert alert-success'><%= flash[:notice] %></div>
    <% end %>


  <div class='container'>
    <%= yield %>

  </div>

</body>

<footer>
<center>
  <hr>
  THIS IS A FOOTER.
</center>  
</footer>

</html>
