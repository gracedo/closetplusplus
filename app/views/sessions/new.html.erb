<h2>Sign In</h2>

<br>

<form action="<%= session_url %>" method="post" accept-charset="utf-8">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" name="user[email]" value="<%= @user.email %>" id="email">
  </div>
  
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="user[password]" value="" id="password">
  </div>

  <p><button type="submit" class="btn btn-default">Sign in</button></p>
</form>