<center>
  <div class="measurements" id="<%= user.id %>">
    <form role="form" class="measurements-form" align="left">
    
      <h2 align="center">Your Measurements</h2>
      
      <hr>

      <div class="alert alert-danger hidden">
        Invalid Attributes! 
      </div>
    
      <input type="hidden" name="measurements[user_id]" value="<%= user.id %>">
      
      <fieldset>
        <div class="meas-row row-fluid">
          <legend>General Body</legend>
        
          <div class="meas-block-left">
            <h3><label for="height">Height</label></h3>
            <div class="slider-text" id="height_amt"></div>
      
            <div class="slider ui-slider ui-slider-horizontal ui-widget ui-widget-content ui-corner-all" id="height-slider" name="measurements[height]" data-target="height" aria-disabled="false">
              <a class="ui-slider-handle ui-state-default ui-corner-all" href="#" style="left: 45.83333333333333%;"></a>
            </div>
        
            <br>
      
            <div class="slider-scale">
              <div class="indexes"></div>
              <div class="slider-labels">
                <span class="slider-label min-label">5 FEET</span>
                <span class="slider-label max-label">7 FEET</span>
              </div>
            </div>

            <script type="text/javascript" charset="utf-8">
              function toFeet(n) {
                  return Math.floor(n / 12) + "'" + (n % 12) + '"';
              }

              $("#height-slider").slider({
                min: 60,
                max: 84,
                step: 1,
                // value: 60, taken from data
                slide: function( event, ui ) {
                  var uiVal = ui.value;
                  $("#height_amt").html(toFeet(uiVal));
                },
                change: function( event, ui) {
                  var uiVal = ui.value
                  $("#height").val(uiVal);
                  $("#height_amt").html(toFeet(uiVal));
                }
              });
              $("#height_amt").html(toFeet(60));
            </script>
          </div>
          
          <div class="meas-block-right">
            <h3><label for="height">Weight</label></h3>
            <div class="slider-text" id="weight_amt"></div>
      
            <div class="slider ui-slider ui-slider-horizontal ui-widget ui-widget-content ui-corner-all" id="weight-slider" name="measurements[weight]" data-target="weight" aria-disabled="false">
              <a class="ui-slider-handle ui-state-default ui-corner-all" href="#" style="left: 45.83333333333333%;"></a>
            </div>
        
            <br>
      
            <div class="slider-scale">
              <div class="indexes"></div>
              <div class="slider-labels">
                <span class="slider-label min-label">100 LBS</span>
                <span class="slider-label max-label">300 LBS</span>
              </div>
            </div>

            <script type="text/javascript" charset="utf-8">
              function toFeet(n) {
                  return Math.floor(n / 12) + "'" + (n % 12) + '"';
              }

              $("#weight-slider").slider({
                min: 100,
                max: 350,
                step: 5,
                // value: 60, this should be remembered and taken from data
                slide: function( event, ui ) {
                  var uiVal = ui.value;
                  $("#weight_amt").html(uiVal + " lbs");
                },
                change: function( event, ui) {
                  var uiVal = ui.value
                  $("#weight").val(uiVal + " lbs");
                  $("#weight_amt").html(uiVal + " lbs");
                }
              });
              $("#weight_amt").html("100 lbs");
            </script>
          </div>
          
          <div style="clear:both;"></div>
      
        </div>
      
      </fieldset>
      
      <div align="center">  
        <% if(action === "create") { %>
          <button class="btn btn-default meas create-measures">Submit</button>
        <% } else { %>
          <button class="btn btn-default meas update-measures">Update</button>
        <% } %>
      </div>
    </form>
  </div>
</center>